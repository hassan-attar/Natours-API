extends emailBase

block content 
  p Hi #{firstName},
  p This is your reset password token.
  p Please send this url with your new password: #{url}
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset your password
  p If you did not reqest to change your password, please ignore this email!
